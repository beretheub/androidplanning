<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.berenice.androidplanning">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".sendSms.SendSmsActivity"
            android:label="@string/title_activity_send_sms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".task.taskActivity"
            android:label="@string/title_activity_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".records.ScheduleActivity"
            android:label="@string/title_activity_fiche"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".database.TestDbActivity"
            android:label="@string/title_activity_test_db"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>